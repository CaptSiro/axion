<UserControl x:Class="axion.Views.WizardSteps.SelectEntryTypeStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:axion.Converters"
             xmlns:wizardSteps="clr-namespace:axion.Views.WizardSteps"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:EnumConverter x:Key="EnumConverter" />
    </UserControl.Resources>

    <UserControl.DataContext>
        <wizardSteps:SelectEntryTypeStepViewModel />
    </UserControl.DataContext>

    <Grid Background="{DynamicResource AppBackground1}">
        <StackPanel Margin="20">
            <TextBlock Text="Choose type:" FontSize="16" Margin="0 0 0 12" Foreground="{DynamicResource AppForeground1}" />

            <RadioButton
                Foreground="{DynamicResource AppForeground1}"
                Content="Directory"
                GroupName="types"
                IsChecked="{Binding SelectedType, Converter={StaticResource EnumConverter}, ConverterParameter=Directory}" />

            <RadioButton
                Foreground="{DynamicResource AppForeground1}"
                Content="Timer"
                GroupName="types"
                IsChecked="{Binding SelectedType, Converter={StaticResource EnumConverter}, ConverterParameter=Timer}" />
        </StackPanel>
    </Grid>
</UserControl>