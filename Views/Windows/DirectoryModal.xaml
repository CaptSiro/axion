<Window x:Class="axion.Views.Modals.DirectoryModal"
        x:Name="DirectoryModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        xmlns:directoryModal="clr-namespace:axion.Views.Modals"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Title="Select Directory"
        Background="{DynamicResource AppBackground1}"
        Foreground="{DynamicResource AppForeground0}">

    <Window.DataContext>
        <directoryModal:DirectoryModalViewModel />
    </Window.DataContext>

    <Grid Margin="12" Background="{DynamicResource AppBackground1}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel>
            <DockPanel>
                <TextBox
                    Text="{Binding SelectedPath, UpdateSourceTrigger=PropertyChanged}"
                    IsReadOnly="True" Width="300" Margin="0 0 8 0" />
                <Button Command="{Binding Browse}" Content="Browse" Width="70" />
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 12 0 0">
            <Button
                Command="{Binding Ok}"
                CommandParameter="{Binding ElementName=DirectoryModalWindow}"
                Content="OK" Width="70" Margin="0 0 8 0" IsDefault="True" />
            <Button
                Style="{StaticResource DangerButton}"
                Command="{Binding Cancel}"
                CommandParameter="{Binding ElementName=DirectoryModalWindow}"
                Content="Cancel" Width="70" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>