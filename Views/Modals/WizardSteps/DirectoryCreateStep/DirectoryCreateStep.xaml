<UserControl x:Class="axion.Views.Modals.WizardSteps.DirectoryCreateStep.DirectoryCreateStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:directoryCreateStep="clr-namespace:axion.Views.Modals.WizardSteps.DirectoryCreateStep"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <directoryCreateStep:DirectoryCreateStepViewModel/>
    </UserControl.DataContext>

    <StackPanel Margin="20">
        <StackPanel>
            <TextBlock Text="Directory name" Margin="0 0 0 8" />
            <TextBox
                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                Width="300" />
        </StackPanel>
    </StackPanel>
</UserControl>
