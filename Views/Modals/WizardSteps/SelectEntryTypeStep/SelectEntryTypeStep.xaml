<UserControl x:Class="axion.Views.Modals.WizardSteps.SelectEntryTypeStep.SelectEntryTypeStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:axion.Views.Modals.WizardSteps"
             xmlns:converters="clr-namespace:axion.Converters"
             xmlns:selectEntryTypeStep="clr-namespace:axion.Views.Modals.WizardSteps.SelectEntryTypeStep"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:EnumConverter x:Key="EnumConverter" />
    </UserControl.Resources>

    <UserControl.DataContext>
        <selectEntryTypeStep:SelectEntryTypeStepViewModel />
    </UserControl.DataContext>

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Choose type:" FontSize="16" Margin="0 0 0 12" />

            <RadioButton
                Content="Directory"
                GroupName="types"
                IsChecked="{Binding SelectedType, Converter={StaticResource EnumConverter}, ConverterParameter=Directory}" />

            <RadioButton
                Content="Timer"
                GroupName="types"
                IsChecked="{Binding SelectedType, Converter={StaticResource EnumConverter}, ConverterParameter=Timer}" />
        </StackPanel>
    </Grid>
</UserControl>