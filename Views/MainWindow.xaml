<Window x:Class="axion.Views.MainWindow"
        x:Name="MainWindowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:axion.ViewModels"
        mc:Ignorable="d"
        Title="Axion" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left panel: fixed width -->
            <ColumnDefinition Width="200" />
            <!-- Center panel: fills remaining space -->
            <ColumnDefinition Width="*" />
            <!-- Right panel: fixed width -->
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Border Grid.Column="0" Background="#E0E0E0" BorderBrush="Black" BorderThickness="1">
            <DockPanel LastChildFill="True">
                <!-- Folder name header -->
                <TextBlock Text="Folder Name" FontWeight="Bold" Padding="8" DockPanel.Dock="Top" />

                <!-- Buttons at bottom -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="4" HorizontalAlignment="Center">
                    <Button
                        Command="{Binding SelectDirectory}"
                        CommandParameter="{Binding ElementName=MainWindowWindow}"
                        Content="Edit" Margin="4,0" Width="60" />
                    <Button Content="New" Margin="4,0" Width="60" />
                    <Button Content="Delete" Margin="4,0" Width="60" />
                </StackPanel>

                <!-- List of selectable items -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox Margin="4">
                        <ListBoxItem Content="Item 1" />
                        <ListBoxItem Content="Item 2" />
                        <ListBoxItem Content="Item 3" />
                    </ListBox>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Center Panel -->
        <Border Grid.Column="1" Background="#FFFFFF" BorderBrush="Black" BorderThickness="1">
            <Grid>
                <!-- State 1: Nothing selected -->
                <TextBlock x:Name="NoSelectionMessage"
                           Text="Select something to show details"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed" />

                <!-- State 2: Folder selected -->
                <StackPanel x:Name="FolderDetails" Margin="12" Visibility="Collapsed">
                    <TextBlock Text="Folder Name" FontSize="16" FontWeight="Bold" Margin="0 0 0 12" />

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Number of items" Grid.Row="0" Grid.Column="0" />
                            <TextBlock Text="x" Grid.Row="0" Grid.Column="1" Margin="12 0" />

                            <TextBlock Text="Average time" Grid.Row="1" Grid.Column="0" />
                            <TextBlock Text="y" Grid.Row="1" Grid.Column="1" Margin="12 0" />

                            <TextBlock Text="Max time" Grid.Row="2" Grid.Column="0" />
                            <TextBlock Text="z" Grid.Row="2" Grid.Column="1" Margin="12 0" />
                        </Grid>
                    </ScrollViewer>
                </StackPanel>

                <!-- State 3: File/Item selected -->
                <StackPanel x:Name="ItemDetails" Margin="12" Visibility="Visible">
                    <TextBlock Text="Item Name" FontSize="16" FontWeight="Bold" Margin="0 0 0 12" />

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView>
                            <!-- <ListView.View> -->
                            <!--     <GridView> -->
                            <!--         <GridViewColumn Header="Date & Time" DisplayMemberBinding="{Binding DateTime}" -->
                            <!--                         Width="150" /> -->
                            <!--         <GridViewColumn Header="Duration" DisplayMemberBinding="{Binding Duration}" Width="120" /> -->
                            <!--     </GridView> -->
                            <!-- </ListView.View> -->
                            <!-- Example dummy rows -->
                            <ListViewItem>
                                <TextBlock Text="1/1/2025 16:31 -> 1h25m04s" />
                            </ListViewItem>
                            <ListViewItem>
                                <TextBlock Text="1/3/2025 11:06 -> 10m44s" />
                            </ListViewItem>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel -->
        <Border Grid.Column="2" Background="#E0E0E0" BorderBrush="Black" BorderThickness="1">
            <DockPanel LastChildFill="True">
                <!-- Header -->
                <TextBlock Text="Timers" FontWeight="Bold" Padding="8" DockPanel.Dock="Top" />

                <!-- Bottom controls -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="4" HorizontalAlignment="Center">
                    <Button Content="▶/⏸" Width="60" Margin="4,0" />
                    <Button Content="■" Width="60" Margin="4,0" />
                </StackPanel>

                <!-- List of timers -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox Margin="4">
                        <ListBoxItem Content="Timer A - 12m04s" />
                        <ListBoxItem Content="Timer B - 3m19s" />
                        <ListBoxItem Content="Timer C - 45m55s" />
                    </ListBox>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>